<div class="card">
    <div class="card-title">
        <h1><%= @post.title %></h1>
    </div>
    <div class="card-text">
        <p><%= @post.body %></p>
        <hr>
        <%= link_to 'Back', :back %>
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
</div>